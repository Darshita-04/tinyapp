<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TinyApp</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>

  <!-- header -->
  
  <%- include('partials/_header') %>

  <!-- showing short url for long url -->

  <section class="pt-5">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="card mb-4">
            <div class="card-header">
              <h5 class="card-title">TinyURL for : <%= longURL %></h5>
            </div>
            <div class="card-body">
              <p class="card-text">
                Short URL ID: <a href="/u/<%= id %>"><%= id %></a>
              </p>
            </div>
          </div>
          <h3>Edit URL</h3>
          <form action="/urls/<%= id %>" method="POST">
            <div class="form-group mb-2">
              <label for="longURL" class="mb-2">New URL</label>
              <input class="form-control" type="text" name="longURL" placeholder="http://"/>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
          </form>
        </div>
      </div>
    </div>
  </section>


  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>