<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/urls">TinyApp</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </div>
      </div>
      <% if (user["email"]) {%> 
        <p class="text-white mb-0">Logged in as <%= user["email"]%></p>
        <form action="/logout" method="POST" class="mb-0">
          <button type="submit" class="btn btn-secondary ms-2">Logout</button>
        </form>
      <%} else {%>
      <form action="/login" method="POST" class="d-flex mb-0 align-items-center">
        <input type="email" class="form-control" placeholder="Enter your email" name="email">
        <button type="submit" class="btn btn-success ms-2">Login</button>
      </form>
      <%}%>
    </div>
  </nav>
</header>